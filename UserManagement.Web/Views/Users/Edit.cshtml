@model UserManagement.Web.Models.Users.UserListItemViewModel

<div class="d-grid justify-content-center gap-3 mb-2">
    <h2 class="text-center">Edit User</h2>

    <form asp-action="Edit" method="post" class="d-grid gap-3 border p-4 rounded-3 shadow">
        <div class="form-group">
            <label asp-for="Forename" class="form-label"></label>
            <input asp-for="Forename" value="@Model.Forename" class="form-control" />
            <span asp-validation-for="Forename" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Surname" class="form-label"></label>
            <input asp-for="Surname" value="@Model.Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" value="@Model.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input asp-for="IsActive" value="@Model.IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
        <div>
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth"
                   value="@(Model.DateOfBirth.HasValue? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : string.Empty)"
                   class="form-control"
                   type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="d-flex gap-3 justify-content-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
