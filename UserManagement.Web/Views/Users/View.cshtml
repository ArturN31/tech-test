@model UserManagement.Web.Models.Users.UserDetailsViewModel

<div class="d-grid justify-content-center gap-3 mb-2">
    <h2 class="text-center">View User</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Forename</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Date Of Birth</th>
                <th>Account Active</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        @Model.User.Id
                    </td>
                    <td>
                        @Model.User.Forename
                    </td>
                    <td>
                        @Model.User.Surname
                    </td>
                    <td>
                        @Model.User.Email
                    </td>
                    <td>
                @(Model.User.DateOfBirth.HasValue? Model.User.DateOfBirth: "N/A")
                    </td>
                    <td>
                        @(Model.User.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown"
                                    aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                            <li><a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.User.Id" class="dropdown-item">Edit</a></li>
                                <li>
                                <form asp-controller="Users" asp-action="Delete" asp-route-id="@Model.User.Id" method="post">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
        </tbody>
    </table>

    <h3>Logs</h3>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Time Stamp</th>
                    <th style="width: 1px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Logs)
                {
                    <tr>
                        <td>
                            @item.PerformedAction
                        </td>
                        <td>
                            @item.TimeStamp.ToString()
                        </td>
                        <td>
                            <a asp-controller="Logs" asp-action="View" asp-route-id="@item.Id" class="dropdown-item">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center">
        @await Html.PartialAsync("_PaginationPartial", Model.Pagination)
    </div>
</div>


