@model UserManagement.Web.Models.Logs.LogListViewModel

<h2>Logs List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>Performed Action</th>
                <th>TimeStamp</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.UserId
                    </td>
                    <td>
                        @item.PerformedAction
                    </td>
                    <td>
                        @item.TimeStamp.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                    <td>
                        <a asp-controller="Logs" asp-action="View" asp-route-id="@item.Id" class="dropdown-item">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-between">
    <div class="btn-group" role="group">
        <a asp-controller="Logs" asp-action="LogsList" class="btn btn-default">Show All</a>
        <a asp-controller="Logs" asp-action="LogsList" asp-route-logsActionFilter="Add"
           class="btn btn-default">
            Add
        </a>
        <a asp-controller="Logs" asp-action="LogsList" asp-route-logsActionFilter="Edit"
           class="btn btn-default">
            Edit
        </a>
        <a asp-controller="Logs" asp-action="LogsList" asp-route-logsActionFilter="Delete"
           class="btn btn-default">
            Delete
        </a>
    </div>

    <div class="d-flex justify-content-center">
        @await Html.PartialAsync("_PaginationPartial", Model.Pagination)
    </div>
</div>
